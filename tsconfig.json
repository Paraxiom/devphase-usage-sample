{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",

        "resolveJsonModule": true,
        "esModuleInterop": true,

        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
    },
    "include": [
        "scripts/*",
        "tests/*",
        "typings/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
